<% provide(:title, 'Make a Pet') %>
<h1>New Pet</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@pet) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :image %>
      <%= f.text_field :image, class: 'form-control' %>

      <%= f.label :biography %>
      <%= f.text_area :biography, class: 'form-control' %>

      <%= f.submit "Create a Pet", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
