<% provide(:title, @pet.name) %>
<div class="row">
  <div class="col-md-6">
    <div>
      <h1>
        <%= @pet.name %>
      </h1>
      <%= link_to image_tag(@pet.image, alt: "IthaPet logo"),
            'http://www.spcaonline.com/' %>
    </div>

    <% if logged_in? %>

      <% if @pet.user.nil? %>

        <% if current_user.pet.nil? %>
          You should adopt this pet!

          <div class="col-md-6 col-md-offset-3">
            <%= form_for(@pet) do |f| %>

            <%= f.button  :submit , name: "adopt",value: "TRUE"%>
            <% end %>
          </div>

        <% end %>
      <% else %>
        <p> Proudly owned by: <%= @pet.user.name %> </p>
      <% end %>

      <% if current_user.pet == @pet %>
        <%= link_to "Make an Account!", ('/pets/'+current_user.pet.id.to_s + '/edit') %>
      <% end %>

    <% end %>
  </div>
</div>
