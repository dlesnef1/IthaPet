<% provide(:title, @pet.name) %>
<div class="row">
  <div class="col-md-6 col-md-4">
    	<div id="petnamepic" class="well">

      		<%= link_to image_tag(@pet.image, height: "250")%>


    	</div>
	</div>
	<div class="col-md-6 col-sm-push-0 col-md-4">
	    <h1>
        	<%= @pet.name %>
      	</h1>
		  	<p id="pet-bio"><%= @pet.biography %></p>

    		<% if logged_in? %>

      			<% if @pet.user.nil? %>

        			<% if current_user.pet.nil? %>

						<h1 id="adoptButton">
            				<%= form_for(@pet) do |f| %>
								<%= f.label "Click Submit to Adopt me! " %>
								</br></br>
            					<%= f.button  :submit , name: "adopt",value: "TRUE"%>

            				<% end %>
          				</h1>

        			<% end %>
      			<% else %>
        		 <p id="pet-bio">Proudly owned by: <%= @pet.user.name %> </p>
      		<% end %>

      	<% if current_user.pet == @pet %>
      	<h1 id="checkPet">
        	<%= link_to "Check on Pet", ('/pets/'+current_user.pet.id.to_s + '/edit') %>
        </h1>
      	<% end %>

    	<% end %>
  	</div>
</div>
